<!-- レストランフォーム -->
<%= form_for(@restaurant) do |f| %>


<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="main">
      <br>
      <%= @restaurant %>

      <center>
        <div class="row">
          <div class="col-xs-4">
            <a href="<%= user_path %>"><i class="fa fa-user fa-3x" aria-hidden="true"></i> &nbsp;</a>
          </div>
          <div class="col-xs-4">
          <a href="/"><i class="fa fa-home fa-3x" aria-hidden="true"></i>&nbsp;</a>
          </div>
          <div class="col-xs-4">

          </div>
        </div>
      </center>


        <div class="male-res">
          <form>
            <div class="male-res-inner">
              <div class="center-content">
                <h3>レストラン入力画面</h3>
              </div>

              <a href="https://www.yelp.co.jp" target="_blank"><i class="fa fa-yelp" aria-hidden="true"></i>https://www.yelp.co.jp</a><br>

              <br>

              <div class="btn-and-input">
                <p><i class="fa fa-square" aria-hidden="true"></i> YelpのURL </p>
                  <%= f.text_field :url, :class => "field male-res-input", :placeholder => "https://www.yelp.co.jp/..." %>
              </div>
              <div class="btn-and-input">
                <p><i class="fa fa-square" aria-hidden="true"></i> 一言コメント </p>
                <%= f.text_area :comment, :class => "field male-res-input", :placeholder => "一言コメントを入力してください" %>
              </div>

<!--                 <% if current_user.gender == "male" %>
                <div class="btn-and-input">
                  <p>▶ 支払いを選択してください </p>
                  <div class="input-radio">
                    <input type="radio" name="" id="">
                    <label for="">奢るよ！</label>
                  </div>
                  <div class="input-radio">
                    <input type="radio"  name="" id="">
                    <label for="">一緒に行こう！</label>
                  </div>
                </div>
                <% end %> -->

              <% if current_user.gender == "male" %>
              <p><i class="fa fa-square" aria-hidden="true"></i> 支払いを選択してください </p>
              <!-- 空欄の場合には「どちらでも！」になります。 -->
                <label><%= f.radio_button :payment, "0" %>奢るよ！</label>
                <label><%= f.radio_button :payment, "1" %>一緒に行こう！</label>
              <% end %>
            </div>
              <%= hidden_field_tag 'restaurant[user_id]', current_user.id %>
              <%= f.submit :class => "male-res-footer lead field action actions btn-block" %>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
