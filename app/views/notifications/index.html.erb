                <img src="@users.find(candidate.user_id).thumb" alt="..." >
              </div>
              <div class="notice-text">
                <h4>お誘いが来ています。1</h4>
                <p>
                  <% if notification.matching == 1 %>
                  <% if notification.liker.id == current_user.id %>
                  <!-- <img src="<%= notification.like.thumb %>" width="200" /> -->
                  <%= link_to notification.like.name+"さんがあなたと"+notification.restaurant.name+"にいきたがっています！",message_path(notification.id) %>
                  <% elsif notification.like.id == current_user.id %>
                  <!-- <img src="<%= notification.liker.thumb %>" width="200" /> -->
                  <%= link_to notification.liker.name+"さんがあなたと"+notification.restaurant.name+"にいきたがっています！",message_path(notification.id) %>
                  <% end %>
                </p>
              </div>
            </li>

