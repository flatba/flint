<!-- 通知一覧 -->
<div class="container">
  <button type="button" class="btn btn-default"><%= link_to '<', "/" %></button>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="main">
        <div class="notice-index">
          <ul class="notice-table">

