
<% if current_user.gender == "male" %>
  <% @notifications.each do |notification| %>
    <% if notification.matching == 1 %>
      <img src="<%= notification.like.thumb %>" />
      <%= link_to notification.liker.name+"さんがあなたと食事にいきたがっています！",message_path(notification.id) %>

    <% elsif notification.matching == 2 %>

      <img src="<%= notification.like.thumb %>" />
      <%= link_to notification.liker.name+"さんがあなたと食事にいきたがっています！",message_path(notification.id) %>

    <% elsif notification.matching == 3 %>

      <img src="<%= notification.like.thumb %>" />
      <% if notification.messages.count == 0 %>
        <%= link_to notification.liker.name+"さんと[ワリカン]でマッチしました！",message_path(notification.id) %>
      <% else %>
        <%= link_to notification.messages.last,message_path(notification.id) %>
      <% end %>

    <% elsif notification.matching == 4 %>

      <img src="<%= notification.like.thumb %>" />
      <% if notification.messages.count == 0 %>
        <%= link_to notification.liker.name+"さんと[おごる]でマッチしました！",message_path(notification.id) %>
      <% else %>
        <%= link_to notification.messages.last,message_path(notification.id) %>
      <% end %>

    <% end %>
  <% end %>

