<CENTER>
<h1>Flint Top</h1>

  <p>現在ログイン中のユーザのUser. (<%= current_user.id %>, <%= current_user.name %>, <%= current_user.gender %>)</p>
<div class="footer">
    <p><%= link_to "[マッチング一覧]", :controller => "flint", :action => "match", :current => current_user.id, method: :post %>
  <!-- <li><% if @age %><%= @age %><% end %></li>
  <a href="http://localhost:3000/?age='a'">パラメータつきりんく</a> -->
  <!-- </ul> -->
  <%= link_to '[Edit]', edit_user_registration_path %>
  <%= link_to '[Top]', "/" %>
  <%= link_to '[Logout]', destroy_user_session_path, :method => :delete %></p>
  <%= link_to '[Restaurants]', restaurants_path %>
</div>


  <ul>
    <% @candidates.each do |candidate| %>
    <div class="row">
      <div class="col-xs-12 col-md-offset-3 col-md-6" style="background-color: white;">
        <div class="thumbnail">
          <img src="<%= candidate.image %>" alt="...">
        </div>
        <% if current_user.gender == "male" %>

          <p class = "btn btn-default"><%= link_to "☓", :controller => "flint", :action => "addLike", :l_id => candidate.user_id, :matching => 0,:restaurant_id => candidate.id, :matching => 0, :method => :post %></p>

          <p class = "btn btn-default"><%= link_to "ワリカン！", :controller => "flint", :action => "addLike", :l_id => candidate.user_id, :restaurant_id => candidate.id, :matching => 1, :matching => 1, :method => :post %></p>

          <p class = "btn btn-default"><%= link_to "おごる！", :controller => "flint", :action => "addLike", :l_id => candidate.user_id, :restaurant_id => candidate.id, :matching => 2, :method => :post %></p>

        <% elsif current_user.gender == "famale" %>
          <p class = "btn btn-default"><%= link_to "☓", :controller => "flint", :action => "addLike", :l_id => candidate.user_id, :restaurant_id => candidate.id, :matching => 0, :method => :post %></p>

          <p class = "btn btn-default"><%= link_to "◯", :controller => "flint", :action => "addLike", :l_id => candidate.user_id, :restaurant_id => candidate.id, :matching => 1, :method => :post %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</ul>
</CENTER>